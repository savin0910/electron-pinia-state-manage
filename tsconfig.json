{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "**/*.astro",
    "./@types",
    "./scripts",
    "./src",
    "./astro.config.ts",
    "./eslint.config.mjs",
    "./forge.config.ts",
    "./tailwind.config.ts"
  ],
  "exclude": [
    "./node_modules",
    "./node_modules/nuxt/node_modules",
    "./node_modules/@pinia/nuxt/runtime/server",
    "./node_modules/@nuxt/devtools/runtime/server",
    "./node_modules/@nuxt/telemetry/runtime/server",
    "./dist",
    "./.output"
  ]
}
