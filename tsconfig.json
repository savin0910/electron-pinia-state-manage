{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "**/*.astro",
    "./@types",
    "./scripts",
    "./src",
    "./astro.config.ts",
    "./eslint.config.mjs",
    "./forge.config.ts",
    "./tailwind.config.ts"
  ],
  "exclude": ["./.astro", "./.vite", "./dist", "./node_modules"]
}
